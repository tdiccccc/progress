            <%= form_with model: @new_progress, url: progresses_start_path, method: :post do |f|%>
              <%= f.hidden_field :product_id, :value => @product.id %>
              <%= f.select(:progress_status, Progress.progress_statuses_i18n.invert, {selected: @new_progress.progress_status}) %>
              <%= f.submit '開始', class: "btn btn-success" %>
            <%end%>
          </td>
          <td>
            <%= form_with model: @progress, url: progresses_finish_path, method: :post do |f|%>
              <%= f.hidden_field :product_id %>
              <%= f.hidden_field :id %>
              <%= f.select(:progress_status, Progress.progress_statuses_i18n.invert, {selected: @progress.progress_status}) %>
              <%= f.submit '完了', class: "btn btn-success" %>
            <%end%>
