<div class="container">
  <div class="row">
    <h3 class="my-5 bg-light">ジャンル一覧・追加</h3>
  </div>  
  <div class="row justify-content-center">
    <div class="col-md-10">

      <%= form_with model: [:admin,@genre] do |f| %>
        <div class="row my-4 form-group">
          <%= f.label "ジャンル名", class: "col-sm-2 col-form-label" %>
          <div class="col-sm-6">
          <%= f.text_field :name, class: "form-control" %>
          </div>
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <%end%>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <% @genres.each do |genre| %>
        <tbody>
          <tr>
            <td><%= genre.name%></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
          </tr>
        </tbody>
        <%end%>
      </table>
    </div>
  </div>
</div>
