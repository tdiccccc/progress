<div class="container">
  <%= form_with model: [:admin,@product] do |f| %>
    <div class="row">
      <h3 class="m-3 bg-light">商品情報更新</h3>
    </div>

    <div class="field row">
      <div class="col-2"><%= f.label :genre_id,"商品名" %></div>
      <div class="col-6">
        <%= f.collection_select(:genre_id, @genres, :id, :name, {prompt: "ジャンルを選択してください"}, {class: "form-control mb-2"}) %>
      </div>
    </div>

    <div class="field row">
      <div class="col-2"><%= f.label :product_count,"数量" %></div>
      <div class="col-4">
        <%= f.text_field :product_count, class: "form-control mb-2",placeholder: "例）1000" %>
      </div>
    </div>

    <div class="genre field row">
      <div class="col-2"><%= f.label :delivery_date,"納期" %></div>
      <div class="col-6">
        <%= f.date_select :delivery_date, {}, class: 'form-control' %>
      </div>
    </div>

    <div class="row my-5">
      <div class="col-2"></div>
      <div class="col-6 form-inline">
        <div class="mr-5">
          <%= f.submit "更新", class: "btn btn-success" %>
        </div>
      </div>
    </div>
  <%end%>
</div>